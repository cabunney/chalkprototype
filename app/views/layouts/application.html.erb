<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title><%= @title %></title>

	<%= javascript_include_tag :defaults %>
	<%= csrf_meta_tag %>
 
<%= stylesheet_link_tag '../stylesheets/header', :media => 'screen' %>
 <%= stylesheet_link_tag '../stylesheets/submission', :media => 'screen' %>
 <%= javascript_include_tag "application" %>

 <%= stylesheet_link_tag 'application', :media => 'screen' %>
 <%= stylesheet_link_tag 'custom', :media => 'screen' %>
 
<script src="http://code.jquery.com/jquery-latest.js" type="text/javascript"></script>
<%= javascript_include_tag "jquery.bxSlider/source/jquery.bxSlider" %>
<script type="text/javascript">

jQuery.fn.submitWithAjax = function() {
  this.live("click", function() {
    $.ajax({type: "GET", url: $(this).attr("href"), dataType: "script"});
    return false;
  });
};

// Here's an example of the class that will be 'clicked'
$(".vote").submitWithAjax();

</script>


</head>
<body>
	<%= render 'layouts/header' %>
	    <div class="container">
	  <% flash.each do |key, value| %>
	  <div class="alert alert-<%= key %>"><%= value %></div>
	  <% end %>
      <%= yield %>
	</div>
	
	<!--<div id = "footer">chalk&nbsp&nbsp</div>-->

</body>
</html>
