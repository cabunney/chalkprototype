<% @question.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<div class = "container">
<div class = "row">
	
<div class = "span8">
<%= form_for(:question, :url => {:action => :submitQ, :id => current_user.id}) do |form| %>
      <%= form.hidden_field(:user_id, :value => current_user.id) %>  
      <%= form.text_area(:description, :value => "ask a question...", :onfocus => "if(this.value == 'ask a question...') { this.value = '' }", :onblur => "if(this.value == ''){this.value = 'ask a question...'}", :id => "dynamicinput") %>
 </div>

<div class = "span8">
	  <%= form.hidden_field(:tags, :id => "tag_names", :value =>"") %>
	  <%= render :partial =>"tag"%>
</div>

<div class = "span2 offset6">
      <%= form.submit "+ add new question", :id => "question_submit"%>
</div>
</div>
</div>
<% end %>

<script type='text/javascript'>
$(document).ready(function(){
$("#question_submit").hover(
function() {
$(this).stop().animate({"opacity": "1"}, "fast");
},
function() {
$(this).stop().animate({"opacity": "0.5"}, "fast");
});
 
});
</script>