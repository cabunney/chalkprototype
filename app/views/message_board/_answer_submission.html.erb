<%= form_for(@new_answer, :url => {:action => :post_answer, :id => params[:id]}, :multipart => true) do |form| %>
	<%= form.hidden_field(:user_id, :value => current_user.id) %>
	<%= form.hidden_field(:question_id, :value => params[:id]) %>
<%= form.hidden_field(:category_id, :value => @question.category.id) %>  
<%= form.text_field :title, :class => "ideaentertitle", :onfocus => "if(this.value == 'Enter idea title...') { this.value = '';  }", :value=>'Enter idea title...',:onblur => "if(this.value == '') {'';  }"  %>
  <%= form.text_area :description, :class => "ideaenterarea", :onfocus => "if(this.value == 'Enter idea description...') { this.value = '';  }", :value=>'Enter idea description...',:onblur => "if(this.value == '') { this.value = '';  }"  %>

<p class = "mid"><%= form.submit "Answer", :class => "ideabutton" %></p>
<% end %>

