


 	<div class = "questiondiv">
			<!-- if questions selected-->
		<% @questions.each do |i| %>
		<% if !i.answers().empty? 
			pic = "../images/ideas.png"
		   else
		   	pic = "../images/noideas.png"
		   end %>	
		<div class = "well">
			<% type ="Question" %>
			<div class="page-header questiontitle"><h3><%= i.title.capitalize %><small>&nbsp&nbsp<%= i.category.name.downcase %></small></h3><div><span class="label label-inverse ideacounter"><%= link_to pluralize(i.answers.size, "answer"), {:action => :details, :id => i.id}, :class => "idealink"%></span><%= link_to image_tag(pic), {:action => :details, :id => i.id}, :class => "ideapic"%></div></div>
			<div class = "upvotebox"><%= render :partial => "voting_item", :locals => {:item => i} %></div>
			<div class = "asker"><%= i.user.first_name + " " + i.user.last_name +  " "%> asked, </div>
			<div class="questiondescription">
				<p class = "descripttext">
				<% if i.description.length > 350
					text = i.description[0..345].split[0...-1].map{|s| "#{s}"}.join(' ') + "..."
				   else text = i.description 
				   end
				 %><%=text%></p>
				<br/>
				<div class = "moreinfo"><%= link_to "see answers", :action => :details, :id => i.id %></div>
 				
			</div>
		</div>
		<% end %>	
		
	</div>
	<div class="pagination"><%= will_paginate @questions %></div>
	