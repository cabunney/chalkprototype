 	<div class = "questiondiv">
			<!-- if questions selected-->
		<% @questions.each do |i| %>	
		<div class = "well">
			<% type ="Question" %>
			<div class="page-header questiontitle"><h3><%= i.title.capitalize %><small>&nbsp&nbsp<%= i.category.name.downcase %></small></h3></div>
			<div class = "asker"><%= i.user.first_name + " " + i.user.last_name +  " "%> asked, </div>
			<div class="questiondescription">
				<p class = "descripttext">
				<% if i.description.length > 370
					text = i.description[0..365].split[0...-1].map{|s| "#{s}"}.join(' ') + "..."
				   else text = i.description; 
				   end
				 %><%=text%></p>
				<br/>
				<div class = "moreinfo"><%= link_to "More Info", :action => :details, :id => i.id %></div>
 				
			</div>
		</div>
		<% end %>	
		
	</div>
	